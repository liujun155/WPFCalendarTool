<Window
    x:Class="WPFCalendarTool.Views.CalendarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://www.caliburnproject.org"
    xmlns:converter="clr-namespace:WPFCalendarTool.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFCalendarTool.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:WPFCalendarTool.ViewModels"
    Title="我的日历"
    Width="440"
    Height="665"
    cal:Message.Attach="[Event MouseLeftButtonDown] = [DragWindow($source, $eventArgs)];[Event Deactivated] = [OnWindowDeactivated($source)]"
    d:Background="#fff"
    d:DataContext="{d:DesignInstance Type=vm:CalendarViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    ShowInTaskbar="False"
    Topmost="True"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <converter:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
        <converter:MonthOpacityConverter x:Key="MonthOpacityConverter" />
        <converter:WeekendColorConverter x:Key="WeekendColorConverter" />
        <converter:HolidayTypeToTextConverter x:Key="HolidayTypeToTextConverter" />
        <converter:HolidayTypeToColorConverter x:Key="HolidayTypeToColorConverter" />
        <converter:HolidayTypeToVisibilityConverter x:Key="HolidayTypeToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Border
            Background="{DynamicResource WindowBackgroundBrush}"
            BorderBrush="Gray"
            BorderThickness="1"
            CornerRadius="10"
            Opacity="0.95" />
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="115" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  标题栏  -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="{DynamicResource ForegroundBrush}"
                    Text="日历工具" />
                <Button
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    cal:Message.Attach="[Event Click] = [ToggleTheme($source, $eventArgs)]"
                    Background="Transparent"
                    BorderThickness="0"
                    Content="🌙"
                    Cursor="Hand"
                    FontSize="16"
                    Foreground="{DynamicResource ForegroundBrush}"
                    ToolTip="切换主题" />
            </Grid>

            <!--  时间及天气  -->
            <Grid Grid.Row="1" Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <TextBlock
                        d:Text="10:30:45"
                        FontFamily="Arial"
                        FontSize="50"
                        FontWeight="Bold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="{Binding TimeNow}" />
                    <TextBlock
                        Margin="0,10,0,0"
                        d:Text="2024年6月15日 星期六"
                        FontSize="16"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="{Binding DateNow}" />
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">
                    <Image
                        Width="50"
                        Height="50"
                        d:Source="/Themes/Images/tbweather/yin.png"
                        Source="{Binding WeatherIcon}" />
                    <TextBlock
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        d:Text="4℃"
                        FontSize="16"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="{Binding WeatherInfo}" />
                </StackPanel>
            </Grid>

            <Border
                Grid.Row="1"
                Height="0.5"
                Margin="15,0"
                VerticalAlignment="Bottom"
                BorderBrush="#2e3947"
                BorderThickness="1" />

            <!--  日历内容区域  -->
            <Grid Grid.Row="2" Margin="10,15,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  月份标题和导航  -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Text="{Binding CurrentMonthText}" />

                    <Button
                        Grid.Column="2"
                        Width="30"
                        Height="30"
                        Margin="0,0,5,0"
                        cal:Message.Attach="[Event Click] = [PreviousMonth]"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="◀"
                        Cursor="Hand"
                        FontSize="12"
                        Foreground="{DynamicResource ForegroundBrush}"
                        ToolTip="上个月" />

                    <Button
                        Grid.Column="3"
                        Width="30"
                        Height="30"
                        Margin="0,0,5,0"
                        cal:Message.Attach="[Event Click] = [NextMonth]"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="▶"
                        Cursor="Hand"
                        FontSize="12"
                        Foreground="{DynamicResource ForegroundBrush}"
                        ToolTip="下个月" />

                    <Button
                        Grid.Column="3"
                        Width="30"
                        Height="30"
                        Margin="35,0,0,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Content="⚙"
                        Cursor="Hand"
                        FontSize="14"
                        Foreground="{DynamicResource ForegroundBrush}"
                        ToolTip="设置" />
                </Grid>

                <!--  星期标题  -->
                <Grid Grid.Row="1" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Opacity="0.6"
                        Text="一" />
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Opacity="0.6"
                        Text="二" />
                    <TextBlock
                        Grid.Column="2"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Opacity="0.6"
                        Text="三" />
                    <TextBlock
                        Grid.Column="3"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Opacity="0.6"
                        Text="四" />
                    <TextBlock
                        Grid.Column="4"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="{DynamicResource ForegroundBrush}"
                        Opacity="0.6"
                        Text="五" />
                    <TextBlock
                        Grid.Column="5"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="#FF6B6B"
                        Opacity="0.8"
                        Text="六" />
                    <TextBlock
                        Grid.Column="6"
                        HorizontalAlignment="Center"
                        FontSize="13"
                        Foreground="#FF6B6B"
                        Opacity="0.8"
                        Text="日" />
                </Grid>

                <!--  日期网格  -->
                <ItemsControl
                    Grid.Row="2"
                    cal:Message.Attach="[Event MouseWheel]=[OnCalendarDaysMouseWheel($eventArgs)]"
                    ItemsSource="{Binding CalendarDays}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="7" Rows="6" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="2"
                                Background="Transparent"
                                Cursor="Hand">
                                <Grid>
                                    <!--  今日背景圆形  -->
                                    <Ellipse
                                        Width="45"
                                        Height="45"
                                        Fill="#4A90E2"
                                        Visibility="{Binding IsToday, Converter={StaticResource BoolToVisibilityConverter}}" />

                                    <!--  假日标记角标  -->
                                    <Border
                                        Width="18"
                                        Height="18"
                                        Margin="2"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="{Binding HolidayType, Converter={StaticResource HolidayTypeToColorConverter}}"
                                        CornerRadius="9"
                                        Visibility="{Binding HolidayType, Converter={StaticResource HolidayTypeToVisibilityConverter}}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="10"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="{Binding HolidayType, Converter={StaticResource HolidayTypeToTextConverter}}" />
                                    </Border>

                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <!--  日期数字  -->
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            FontSize="18"
                                            FontWeight="{Binding IsToday, Converter={StaticResource BoolToFontWeightConverter}}"
                                            Foreground="{Binding IsCurrentMonth, Converter={StaticResource MonthOpacityConverter}}"
                                            Text="{Binding Day}" />

                                        <!--  农历或节日  -->
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            HorizontalAlignment="Center"
                                            FontSize="10"
                                            Foreground="{Binding IsCurrentMonth, Converter={StaticResource MonthOpacityConverter}}"
                                            Opacity="0.6"
                                            Text="{Binding LunarText}" />
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>
    </Grid>
</Window>
